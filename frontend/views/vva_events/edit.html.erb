<%= setup_context(:object => @vva_event, :title => @vva_event.display_string) %>

<%= form_for @vva_event, :as => "vva_event", :url => {:action => :update}, :html => {:class => 'form-horizontal aspace-record-form', :id => "vva_event_form"}.merge(update_monitor_params(@vva_event)) do |f| %>
  <%= form_context :vva_event, @vva_event do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "sidebar" %>
      </div>

      <div class="col-md-9">
        <%= render_aspace_partial :partial => "vva_events/toolbar" %>
        <div class="record-pane">
          <%= link_to_help :topic => "vva_event" %>
          <h2><span class="label label-info"><%= I18n.t("vva_event._singular") %></span></h2>
          <input type="hidden" name="_method" value="put" />
          <%= render_aspace_partial :partial => "vva_events/form", :locals => {:form => form} %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
