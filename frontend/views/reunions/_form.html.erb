<%= render_aspace_partial :partial => "shared/form_messages", :locals => {:object => @reunion, :form => form} %>

<% define_template("reunion", jsonmodel_definition(:reunion)) do |form| %>
  <section id="basic_information">
    <h3>
      <%= I18n.t "reunion._frontend.section.basic_information" %>
      <%= link_to_help :topic => "reunion_basic_information" %>
    </h3>
    <fieldset>
	  <%= form.label_and_boolean "active", {}, user_prefs["active"] %>
	  <%= form.label_and_textfield "name", :col_size => 5 %>
	  <%= form.label_and_select "department", form.possible_options_for("department", true) %>
	  <%= form.label_and_date "date_s", :col_size => 3 %>
	  <%= form.label_and_textfield "time_s", :col_size => 2 %>
	  <%= form.label_and_date "date_e", :col_size => 3 %>
	  <%= form.label_and_textfield "time_e", :col_size => 2 %>
	  <%= form.label_and_textfield "title" %>
	  <%= form.label_and_textfield "web_link" %>
	  <%= form.label_and_textfield "contact", :col_size => 5 %>
	  <%= form.label_and_textfield "email" %>
	  <%= form.label_and_textfield "phone", :col_size => 3 %>
	  <%= form.label_and_textfield "location" %>
	  <%= form.label_and_textfield "city", :col_size => 5 %>
	  <%= form.label_and_textfield "state", :col_size => 3 %>
	  <%= form.label_and_textfield "zipcode", :col_size => 2 %>
	  <%= form.label_and_textfield "country", :col_size => 4 %>
	  <%= form.label_and_textarea "general_note" %>
	  <%= form.label_and_textarea "post_note" %>
    </fieldset>
  </section>
<% end %>

<% form.emit_template("reunion") %>


<div class="form-actions">            
  <button type="submit" class="btn btn-primary"><%= I18n.t("reunion._frontend.action.save") %></button>
  <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
</div>
